@using AMMasterProject.ViewModel
@using AMMasterProject.Helpers
@model List<ReviewMetaDataViewModel>


@if (Model != null && Model.Count > 0)
{
    @foreach (var item in Model)
    {
        <div class="padding15 box-left review-@item.ReviewerType">
            <span class="center marginrf-15 ">
  
               

                @if(@item.ReviewerImage =="")
                {
                    <span class="profile-alpha alpha-@item.ReviewName.ToLower().Substring(0,1)">@item.ReviewName.Substring(0,1)</span>
                }
                else

                {
                    <img class="user-image" src='@(item.ReviewerImage == "" ? "/images/no-image.png" : item.ReviewerImage)' alt="Name">
                }

           
            <br/>
                <span class="grey-c cap">  @item.ReviewName </span>
            </span> <div>
            <p class="no-margin">
                @item.Description
                


            </p> <p class="bold no-margin">
               
                        @for (var i = 1; i <= 5; i++)
                        {
                            if (i <= item.AverageRating)
                            {
                            <i class="fa fa-star yellow-c"></i>
                            }
                            else
                            {
                            <i class="fa fa-star"></i>
                            }
                        }
                       
               
                @item.AverageRating
            </p>
            <p class="no-margin">
                    <span class=" grey-c">@GlobalHelper.DateFormat(@item.ReviewDate)</span>
            </p>
          
   
                @item.Attachment
            </div>
           
   
          </div>
         
        
    }

   
}


