@page
@model AMMasterProject.Pages.Admin.Coupons.IndexModel
@{
    <title>Coupons Setup</title>


    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}
<form method="post">

<div class="row no-margin">
    <div class="col-md-2">
        <div class="nav nav-pills flex-column flex-md-row mb-3">
            <a class="nav-link" href="~/admin/coupons">
                <i class="bx bx-list-ul me-1"></i>
                List
            </a>
            <a class="nav-link" href="~/admin/coupons/add"><i class="bx bx-plus me-1"></i> Add New</a>

        </div>
    </div>
    <div class="card col-md-10 no-padding">
        <div class="table-responsive text-nowrap">
            <table id="ListingLoad" class="table">
                <thead class="table-secondary">
                    <tr>



                        <th style="width:150px" class="text-center">Coupon Code</th>
                        <th style="width:150px" class="text-center">  Pricing </th>
                        @* <th style="width:150px" class="text-center">  Price Deduction</th> *@
                     @*   <th style="width:100px" class="text-center">  Applied On </th> *@
                       
                        <th style="width:100px" class="text-center">Start Date -  End Date </th>
                        <th style="width:100px" class="text-center">Status</th>
                        <th style="width:60px" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var item in Model.productcouponlist)
                        {
                            
                       
                    @*     Loop start*@
                    <tr>


                        <td class="text-center upp">

                          @item.CouponName
                        </td>
                        <td class="text-center">
                            @item.DiscountType @item.Discount                       
                            </td>
                   @*      <td class="text-center">
                           @item.SellerPercentage % <small class="grey-c"> Seller</small> <br/>
                           @item.AdminPercentage %<small class="grey-c"> Admin</small>
                        </td> *@
                        @*<td class="text-center">
                           Selected Seller
                        </td>*@
                        <td class="left">
                            <div>
                                <strong> Start Date</strong>
                                <span class="float-end">
                                            @item.StartDate
                                </span>
                                
                           
                            </div>
                            <div>
                                        <strong> End Date</strong>
                                        <span class="float-end">
                                            @item.EndDate
                                        </span>


                                    </div>

                                   
                        </td>
                        <td class="text-center">
                                    <span class="badge bg-label-success">

                            @item.IsPublish </span>
                        </td>
                        <td class="center">
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">

                                            <a href="/admin/coupons/add?ID=@item.ProductCouponId" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                           
                                            @if (item.CouponTypeId != 24)
                                            {
                                                <a href="/admin/coupons/couponchild?ID=@item.ProductCouponId&couponchild=@item.CouponTypeId" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Coupon Child</a>
                                            }

                                            <button formnovalidate asp-page-handler="Delete" asp-route-productcouponid="@item.ProductCouponId" onclick="return confirm('Are you sure you want to delete?')" class="dropdown-item"><i class="bx bx-trash"></i> Delete</button>


                                </div>
                            </div>
                        </td>
                    </tr>

                    @*     Loop End*@

                        }


                </tbody>
            </table>
        </div>

    </div>
</div>

</form>