@page
@model AMMasterProject.Pages.Admin.pagessetup.categoryModel
@{
    <title>Pages Setup</title>
    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}


<div class="row no-margin">
    <div class="col-md-2">
        <div class="nav nav-pills flex-column flex-md-row mb-3">
            <a class="nav-link" href="~/admin/pagessetup">
                <i class="bx bx-list-ul me-1"></i>
                All Pages
            </a>
            <a class="nav-link" href="~/admin/pagessetup/add"><i class="bx bx-plus me-1"></i> Add New</a>
            <a class="nav-link" href="~/admin/pagessetup/category"><i class="bx bx-plus me-1"></i> Category</a>

        </div>
    </div>


  

    <div class="card col-md-10 no-padding">
         <form method="post">
            <input asp-for="@Model.pagecategory.PageCategoryId" type="hidden" />
<div class="form ">
            <div class="row padding30">
                <div class="col-md-5">
                    <div class="form-group">
                        Category Name

                        <input type="text" maxlength="100" asp-for="@Model.pagecategory.Category">
                        <span asp-validation-for="@Model.pagecategory.Category" class="required"></span>


                    </div>
                        <div class="checkright">
                            Mark check if you want to live it <br/>
                    <input type="checkbox" asp-for="@Model.pagecategory.IsPublish" checked="@Model.pagecategory.IsPublish" />
                    <label id="ispublish" asp-for="@Model.pagecategory.IsPublish">Publish</label>
                    </div>
                        <div class="form-group">

                            <input type="submit" class="clickable-button" value="Save">


                        </div>
                    </div>
              
    </div>
    <hr/>
            <div class="table-responsive text-nowrap ">
                <table id="ListingLoad" class="table">
                    <thead class="table-secondary">
                        <tr>



                            <th style="width:150px">Title</th>

                            <th style="width:100px" class="text-center">Status</th>
                            <th style="width:60px" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                        @*     Loop start*@

                        @foreach (var item in Model.Listpagecategory)
                            {
                                
                            
                        <tr>


                            <td>

                                @item.Category
                            </td>

                            <td class="text-center">

                                        <span class="badge bg-label@(@item.IsPublish ? "-success" : "-secondary") me-1">@item.IsPublish</span>


                           
                            </td>
                            <td class="center">
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">

                                        <a class="dropdown-item" href="~/admin/pagessetup/category?ID=@item.PageCategoryId"><i class="bx bx-edit-alt me-1"></i> Edit</a>

                                                <a class="dropdown-item" href="#@item.PageCategoryId"><i class="bx bx-trash"></i>Delete</a>


                                        




                                            </div>
                                </div>

                                        <div class="overlay" id="@item.PageCategoryId">
                                            <div class="popup-small popup ">
                                                <div class="padding30 left">
                                                    <h4 class="no-margin">
                                                        Confirm Delete
                                                    </h4>

                                                    <p class="medium">
                                                        Are you sure you want to delete this record ?
                                                    </p>

                                                    <a class="btn grey-bg white-c float-end margin5" href="#close">No</a>
                                                    <button formnovalidate asp-page-handler="Delete" asp-route-pagecategoryid="@item.PageCategoryId" class="btn theme-bg f-theme float-end margin5"> Yes </button>


                                                    <br />
                                                    <br />
                                                </div>
                                            </div>
                                        </div>

                            </td>
                        </tr>

                        @*     Loop End*@
                            }

                    </tbody>
                </table>
            </div>
        </div>

        </form>
    </div>

</div>


