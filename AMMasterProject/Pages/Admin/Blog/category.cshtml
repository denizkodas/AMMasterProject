@page
@model AMMasterProject.Pages.Admin.Blog.categoryModel
@{
    <title>Blogs</title>

    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<form method="post">

    <input asp-for="@Model.blogcategory.BlogCategoryId" type="hidden" />
<div class="row no-margin">
    <div class="col-md-2">
        <div class="nav nav-pills flex-column flex-md-row mb-3">
            <a class="nav-link" href="~/admin/blog">
                <i class="bx bx-list-ul me-1"></i>
                List
            </a>
            <a class="nav-link" href="~/admin/blog/add"><i class="bx bx-plus me-1"></i> Add </a>
            <a class="nav-link" href="~/admin/blog/category"><i class="bx bx-plus me-1"></i> Category </a>

        </div>
    </div>
    <div class="card col-md-10 no-padding">

        <div class="form ">
            <div class="row padding30">
                <div class="col-md-5">
                    <div class="form-group">
                        Category Name
                            <input type="text" maxlength="100" asp-for="@Model.blogcategory.BlogCategoryName">
                            <span asp-validation-for="@Model.blogcategory.BlogCategoryName" class="required"></span>



                            <input type="checkbox" asp-for="@Model.blogcategory.IsPublish" checked="@Model.blogcategory.IsPublish" />
                            <label id="ispublish" asp-for="@Model.blogcategory.IsPublish">Is Publish</label>
                    </div>
                </div>
                    <div class="col-md-1"> <br /> <button class="clickable-button">Save</button></div>
            </div>
            <hr />
            <div class="table-responsive text-nowrap ">
                <table id="ListingLoad" class="table">
                    <thead class="table-secondary">
                        <tr>



                            <th style="width:150px">Title</th>

                            <th style="width:100px" class="text-center">Status</th>
                            <th style="width:60px" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                        @*     Loop start*@

                        @foreach (var item in Model.blogcategorylist)
                            {
                                
                            
                        <tr>


                            <td>

                               @item.BlogCategoryName
                            </td>

                            <td class="text-center">
                                @item.IsPublish
                            </td>
                            <td class="center">
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">

                                        <a class="dropdown-item" href="~/admin/blog/category?ID=@item.BlogCategoryId"><i class="bx bx-edit-alt me-1"></i> Edit</a>

                                                <button formnovalidate asp-page-handler="Delete" asp-route-blogcategoryid="@item.BlogCategoryId" onclick="return confirm('Are you sure you want to delete?')" class="dropdown-item"><i class="bx bx-trash"></i> Delete</button>

                                        
                                        @* <a class="dropdown-item"><i class="bx bx-trash"></i> In Active</a>*@
                                    </div>
                                </div>
                            </td>
                        </tr>

                        @*     Loop End*@

                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


</form>