@page
@model AMMasterProject.Pages.Admin.cmssetup.IndexModel
@{
    <title>Content Management</title>
    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<div class="card">
<div class="table-responsive text-nowrap">
    <table id="ListingLoad" class="table">
        <thead class="table-secondary">
            <tr>



                <th style="width:150px" >Title</th>
             
                <th style="width:100px" class="text-center">Status</th>
                <th style="width:60px" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">

            @*     Loop start*@
                @foreach (var item in Model.cms)
                {
                    
              
            <tr>


                <td>
                          

                    @item.Cmskey
                </td>
            
                <td class="text-center">
                            <span class="badge bg-label@(@item.IsActive ? "-success" : "-secondary") me-1">@item.IsActive</span>

                   
                </td>
                <td class="center">
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">

@*                            <a class="dropdown-item" href="~/admin/cmssetup/add?ID=@item.Cmsid"><i class="bx bx-edit-alt me-1"></i> Edit Content</a>*@


                                    <a href="~/admin/editor/index?ID=@item.Cmsid&Pagename=@item.Cmskey&Type=CMS" class="btn d-grey-bg white-c btn-xs float-end"> Design Page</a>
                        </div>
                    </div>
                </td>
            </tr>
                }
            @*     Loop End*@


        </tbody>
    </table>
    </div>
</div>