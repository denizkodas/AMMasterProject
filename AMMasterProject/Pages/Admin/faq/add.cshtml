@page
@model AMMasterProject.Pages.Admin.faq.addModel
@{
    <title>FAQ</title>


    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<form method="post">

    <input asp-for="@Model.faq.FAQId" type="hidden" />
<div class="row no-margin">
    <div class="col-md-2">
        <div class="nav nav-pills flex-column flex-md-row mb-3">
            <a class="nav-link" href="~/admin/faq">
                <i class="bx bx-list-ul me-1"></i>
                List
            </a>
            <a class="nav-link" href="~/admin/faq/add"><i class="bx bx-plus me-1"></i> Add </a>

        </div>
    </div>
    <div class="card col-md-10">
        <div class="form padding30">




            <div class="row">

                <div class="col-md-3 s-bold">
                    FAQ Details
                </div>

                <div class="col-md-9 no-padding">
                    <div class="row">
                        <div class="form-group col-md-11">
                            Question
                                <input type="text" maxlength="200" asp-for="@Model.faq.Question">
                                <span asp-validation-for="@Model.faq.Question" class="required"></span>

                        </div>

                        <div class="form-group col-md-11">
                           Answer
                                <input type="text" maxlength="1000" asp-for="@Model.faq.Answer">
                                <span asp-validation-for="@Model.faq.Answer" class="required"></span>

                        </div>


                        <div class="form-group col-md-5">
                            Sort #
                                <input type="number" asp-for="@Model.faq.Sortorder">
                                <span asp-validation-for="@Model.faq.Sortorder" class="required"></span>
                        </div>

                    </div>
                </div>
            </div>
            <hr />

            <div class="checkright row">


                <div class="col-md-3 s-bold">
                    Status
                </div>

                <div class="col-md-9">
                    <div class="form-group">


                            <input type="checkbox" asp-for="@Model.faq.IsPublish" checked="@Model.faq.IsPublish" />
                            <label id="ispublish" asp-for="@Model.faq.IsPublish">Is Publish</label>


                    </div>


                </div>
            </div>
            <hr>     <div class="row paddingrf-15 right">
                <div class="col-md-6"></div> <div class="col-md-6">

                        <button class="clickable-button">Save</button>
                    
                </div>



            </div>
        </div>
    </div>
</div>

                        </form>