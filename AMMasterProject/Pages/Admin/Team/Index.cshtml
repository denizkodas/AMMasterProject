@page
@model AMMasterProject.Pages.Admin.Team.IndexModel
@{
    <title>Team</title>

    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<form method="post">


<div class="row no-margin">
    <div class="col-md-2">
        <div class="nav nav-pills flex-column flex-md-row mb-3">
            <a class="nav-link" href="~/admin/team">
                <i class="bx bx-list-ul me-1"></i>
                List
            </a>
            <a class="nav-link" href="~/admin/team/add"><i class="bx bx-plus me-1"></i> Add </a>
         
        </div>
    </div>
    <div class="card col-md-10">

        <div class="table-responsive text-nowrap">
            <table id="ListingLoad" class="table">
                <thead class="table-secondary">
                    <tr>
                        <th style="width:150px">Name</th>
                        <th style="width:150px" class="text-center">Designation</th>
                        <th style="width:100px" class="text-center">Status</th>
                        <th style="width:60px" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @*     Loop start*@

                    @foreach (var item in Model.teamlist)
                        {
                            
                       
                    <tr>
                        <td>
                            <img src="@item.Image" class="rounded-circle">
                           @item.Name
                        </td>
                        <td class="text-center">
                            @item.Designation
                        </td>
                        <td class="text-center">
                            @item.IsPublish
                        </td>
                        <td class="center">
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">

                                            <a href="/admin/team/add?ID=@item.TeamId" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                            <button formnovalidate asp-page-handler="Delete" asp-route-teamid="@item.TeamId" onclick="return confirm('Are you sure you want to delete?')" class="dropdown-item"><i class="bx bx-trash"></i> Delete</button>

                                </div>
                            </div>
                        </td>
                    </tr>
                    @*     Loop End*@

                        }
                </tbody>
            </table>
        </div>
    </div>
</div>

</form>
