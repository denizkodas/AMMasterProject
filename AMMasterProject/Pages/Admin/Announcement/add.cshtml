@page
@model AMMasterProject.Pages.Admin.Announcement.addModel
@{
    <title>Announcement</title>


    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<form method="post">


    <div class="row no-margin">
        <div class="col-md-2">
            <div class="nav nav-pills flex-column flex-md-row mb-3">
                <a class="nav-link" href="~/admin/announcement">
                    <i class="bx bx-list-ul me-1"></i>
                    List
                </a>
                <a class="nav-link" href="~/admin/announcement/add"><i class="bx bx-plus me-1"></i> Add </a>

            </div>
        </div>
        <div class="card col-md-10">
            <div class="form padding30">




                <div class="row">

                    <div class="col-md-3 s-bold">
                        Announcement Details
                    </div>

                    <div class="col-md-9 no-padding">
                        <div class="row">


                            <div class="form-group col-md-5">
                                Title
                                <input type="text" asp-for="@Model._announcement.Title" oninput="updateCharacterCount(this,document.getElementById('characterCountLabelTitle'))">
                                <span id="characterCountLabelTitle"></span>
                                <span asp-validation-for="@Model._announcement.Title" class="required"></span>
                            </div>


                            <div class="form-group col-md-10">
                                Description
                                <textarea maxlength="500" asp-for="@Model._announcement.Description" oninput="updateCharacterCount(this,document.getElementById('characterCountLabelDescription'))"></textarea>
                                <span id="characterCountLabelDescription"></span>
                                <span asp-validation-for="@Model._announcement.Description" class="required"></span>
                            </div>
                            <div class="form-group col-md-5">
                                For
                                <select asp-for="@Model._announcement.AnnouncementFor">
                                    <option selected disabled>--Select--</option>
                                    <option>Both</option>
                                    <option>Seller</option>
                                    <option>Customer</option>
                                </select>

                                <span asp-validation-for="@Model._announcement.AnnouncementFor" class="required"></span>
                            </div>

                            <div class="form-group col-md-10">
                                Start Date
                                <input type="datetime-local" asp-for="@Model._announcement.StartDate" />
                                <span asp-validation-for="@Model._announcement.StartDate" class="required"></span>
                            </div>

                            <div class="form-group col-md-10">
                                Expiry Date
                                <input type="datetime-local" asp-for="@Model._announcement.ExpiryDate" />
                                <span asp-validation-for="@Model._announcement.ExpiryDate" class="required"></span>

                            </div>



                        </div>
                    </div>
                </div>





                <div class="row paddingrf-15 right">
                    <div class="col-md-6"></div> <div class="col-md-6">    <button class="clickable-button">Save</button></div>



                </div>
            </div>

        </div>
    </div>

</form>