@page
@model AMMasterProject.Pages.Admin.revenuesettingsModel
@{
      <title>Revenue System Settings</title>

    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-2 col-12 mb-3 mb-md-0">


        <ul class="nav nav-pills mb-3" role="tablist">
            <li class="nav-item w-100 ">
                <button id="boostingTabButton" type="button" class="nav-link text-start active" role="tab" data-bs-toggle="tab" data-bs-target="#boostingsetup" aria-controls="boostingsetup" aria-selected="true">
                   Boosting Setup
                </button>
            </li>  
            <li class="nav-item w-100 ">
                <button id="advertisementTabButton" type="button" class="nav-link text-start" role="tab" data-bs-toggle="tab" data-bs-target="#advertisementsetup" aria-controls="advertisementsetup" aria-selected="true">
                    Advertisement Setup
                </button>
            </li>
            <li class="nav-item w-100 ">
                <button id="creditTabButton" type="button" class="nav-link text-start " role="tab" data-bs-toggle="tab" data-bs-target="#creditsetup" aria-controls="creditsetup" aria-selected="true">
                    Credit System
                </button>
            </li>
            <li class="nav-item w-100 ">
                <button id="subscriptionTabButton" type="button" class="nav-link text-start " role="tab" data-bs-toggle="tab" data-bs-target="#subscriptionsetup" aria-controls="subscriptionsetup" aria-selected="true">
                    Subscription Setup
                </button>
            </li>
            <li class="nav-item w-100 ">
                <button id="commissionTabButton" type="button" class="nav-link text-start " role="tab" data-bs-toggle="tab" data-bs-target="#commissionsetup" aria-controls="commissionsetup" aria-selected="true">
                  Commission Setup
                </button>
            </li>
        </ul>


    </div>
    <div class="col-md-10 col-12">
        <div class="tab-content form card padding30 h-600">

            @* @Boosting Section *@

            <div class="tab-pane fade active show" id="boostingsetup">
                <h5 class="bold"> Boosting Setup</h5>


                <div class="row form paddingtb-15 justify-content-between">

                    <div class="col-md-8">
                        <div class="checkright row">


                            <div class="col-md-3 s-bold">
                                Enable/Disable
                            </div>

                            <div class="col-md-9">
                                <div class="form-group">


                                    <input id="checkboxpublish" type="checkbox"><label for="checkboxpublish">Enable</label>

                                    <p class="small grey-c paddingrf-15 marginrf-15">  Mark check if you want to Enable commission system </p>


                                </div>


                            </div>
                        </div>






                        <div class="form-group">



                            <button>Save</button>



                        </div>
                    </div>



                </div>
            </div>
            @* @ advertisement *@
