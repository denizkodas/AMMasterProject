                                        </div>
                                        <div id="facebookSocialMedia" class="col-md-9">
                                       <div class="row">

                                       
                                            
                                            <div class="col-md-6">
                                            <input type="text" maxlength="300" asp-for="@Model.registermethod.AppId" />
                                            <span asp-validation-for="@Model.registermethod.AppId" class="required"></span>
                                        </div>

                                        <div class="col-md-6">
                                            <input type="text" maxlength="300" asp-for="@Model.registermethod.AppSecret" />
                                            <span asp-validation-for="@Model.registermethod.AppSecret" class="required"></span>
                                        </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 padding10">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="@Model.registermethod.IsFacebookLogin" id="facebookloginSwitchCheck" value="true">
                                                <span class="slider"></span>
                                            </label>
                                            <label class="form-check-label" for="facebookloginSwitchCheck"> Enable</label>



                                        </div>

                                    </div>


                                </div>

                                


                                <hr />

                                @* verification system*@
                                <div>

                                    <h5 class="s-bold no-margin line30">
                                        Verification  System

                                    </h5>


                                    <p>


                                        Effortlessly manage the verification system across your entire website by enabling or disabling the option to send verification codes via email or phone number. Take control of the verification process with ease.
                                    </p>

                                    <div class=" paddingtb-15 row no-margin">

                                        <div class="col-md-6 no-padding">

                                            <div class="black-c bold">


                                                <label class="switch">
                                                    <input type="checkbox" asp-for="@Model.registermethod.IsRegisterVerification" id="flexSwitchCheckChecked" value="true">
                                                    <span class="slider"></span>
                                                </label>
                                                <label class="form-check-label" for="flexSwitchCheckChecked"> Enable</label>



                                                <p class="form-check-msg">
                                                    Enable with a Right Switch, Disable with a Left Switch:
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>




                                <hr>
                                <div>
                                    <h5 class="s-bold no-margin line30">
                                        Banners

                                    </h5>
                                    <p>
                                        Images for the registration and login pages. <br /> Size Required ( 470 by 650 ).
                                    </p>

                                    @* login section banner*@
                                    <div class="row  margintb-15">
                                        <div class=" col-md-3 no-padding s-bold">
                                            Login Form Image
                                        </div>
                                        <div class="col-md-9 no-padding">
                                            <div>
                                                Upload Image
                                                <br>
                                                <label class="file-upload">
                                                    <span class="btn btn-default l-grey-bg">
                                                        Select File
                                                    </span>
                                                    <input type="file" id="fileInputLogin" onchange="uploadFileLogin()" />

                                                    <progress id="fileProgressLogin" class="w-100 margin5" style="display:none"></progress>
                                                </label>
                                                <img id="imageLogin" src="@Model.registermethod.LoginImage" class="preview" style="display: @(Model.registermethod.LoginImage == null ? "none" : "block")" />

                                                <input type="hidden" asp-for="@Model.registermethod.LoginImage" />
                                            </div>
                                            <label class="validation" id="errorLoginImage"></label>
                                        </div>


                                    </div>

                                    @* register section banner*@
                                    <div class="row  margintb-15">
                                        <div class=" col-md-3 no-padding s-bold">
                                            Register Form Image
                                        </div>
                                        <div class="col-md-9 no-padding">
                                            <div>
                                                Upload Image
                                                <br>
                                                <label class="file-upload">
                                                    <span class="btn btn-default l-grey-bg">
                                                        Select File
                                                    </span>
                                                    <input type="file" id="fileInputRegister" onchange="uploadFileRegister()" />

                                                    <progress id="fileProgressRegister" class="w-100 margin5" style="display:none"></progress>
                                                </label>


                                                <img id="imageRegister" src="@Model.registermethod.RegisterImage" class="preview" style="display: @(Model.registermethod.RegisterImage == null ? "none" : "block")">

                                                <input type="hidden" asp-for="@Model.registermethod.RegisterImage" />
