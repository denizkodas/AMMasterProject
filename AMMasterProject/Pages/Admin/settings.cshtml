                            <table class="table " id="ListingLoad1" style="width:100%">
                                <thead class="table-secondary">
                                    <tr>
                                        <td style="width:100px">Mark As</td>
                                        <td>Name</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.ListCountries)
                                    {
                                        <tr>
                                            <td class="link-active">
                                                @if (item.IsCountryPublish == true)
                                                {
                                                    <a id="@item.ID" class="active" data-countryid="@item.ID" onclick="updateCountry(this)">
                                                        Active
                                                    </a>
                                                }
                                                else

                                                {
                                                    <a id="@item.ID" class="inactive" data-countryid="@item.ID"  onclick="updateCountry(this)">
