    <title>Configuration Settings</title>


    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<form method="post">


    <div class=" white-bg no-padding simple-tab">
        <div class="row no-margin">
            <div class="col-md-2 no-padding">
                <ul class="nav nav-pills mb-3" role="tablist">



                    @*----tab1------- Register With Email or number btn*@
                    <li class="nav-item">
                        <button id="registerTabButton" type="button" class="nav-link" role="tab" data-bs-toggle="tab" data-bs-target="#registermethod" aria-controls="registermethod" aria-selected="true">
