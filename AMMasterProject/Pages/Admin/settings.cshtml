                                        </div>
                                        <div class="col-md-2 padding10">
                                            <label class="switch">
                                                <input type="checkbox" asp-for="@Model.registermethod.IsGoogleLogin" id="googleloginSwitchCheck" value="true">
                                                <span class="slider"></span>
                                            </label>
                                            <label class="form-check-label" for="googleloginSwitchCheck"> Enable</label>



                                        </div>

                                    </div>
                                    @*  facebook*@

                              
