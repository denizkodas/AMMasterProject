                                </div>   <div class="col-md-4 ">


                                    <div class="form-group  no-padding">
                                        Default Currency
                                        <select asp-items="@Model.ListCurrency" item asp-for="@Model.defaultcurrency.BaseCurrency">
                                            <option disabled selected>-- Select --</option>

                                            

                                        </select>

                                    </div>
                                </div>



                                <div class="form-group col-md-2 padding15">
                                    <button class="clickable-button" asp-page-handler="Currency">Update</button>



                                </div>
                            </div>

                           

                           
                           
                            <div class="form-group  margintb-15" id="dvcurrencyList">

                             
                                <div class="table-responsive margintb-15 text-nowrap border ">
                                    <div class="padding15">
                                        <h5 class="bold black-c no-margin">Set Currency</h5>
                                        <p class="no-margin">
                                            Please select which Currency you want to enable
                                        </p>
                                    </div>
                                    <hr class="no-margin" />
                                    <table class="table " id="ListingLoad2" style="width:100%">
                                        <thead class="table-secondary">
                                            <tr>
                                                <td style="width:100px">Mark As</td>
                                                <td>Name</td>
                                                <td>Conversion Rate</td>

                                                    <td>Last Updated Date</td>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model.ListCurrencies)
                                            {
                                                <tr>
                                                    <td class="link-active">
                                                        @if (item.IsCurrencyPublish == true)
                                                        {
                                                            <a id="@item.ID" class="active" data-currencyid="@item.ID" data-conversionrate="@item.ConversionRate" onclick="updateCurrency(this)">
                                                                Active
                                                            </a>
                                                        }
                                                        else

                                                        {
                                                            <a id="@item.ID" class="inactive" data-currencyid="@item.ID" data-conversionrate="@item.ConversionRate" onclick="updateCurrency(this)">
                                                                Inactive
                                                            </a>
                                                        }
