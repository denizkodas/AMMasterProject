    function uploadFileRegister() {
        var fileInput = $("#fileInputRegister")[0];
        $("#fileProgressRegister").show();
        var progressBar = $("#fileProgressRegister")[0];
        progressBar.value = 60;

        var file = fileInput.files[0];

        if (!file.type.match(/image\/(jpeg|png)/)) {
            $('#errorRegisterImage').text("Only jpeg or png files are allowed.");
            $("#fileProgressRegister").hide();
            return;
        }

        if (file.size > 10 * 1024 * 1024) {
            alert("File size must be less than 10 MB.");
            $('#errorRegisterImage').text("File size must be less than 10 MB.");
            $("#fileProgressRegister").hide();
            return;
        }

        var image = new Image();
        image.onload = function () {
            var width = image.width;
            var height = image.height;
            var desiredWidth = 470;
            var desiredHeight = 650;

            if (width !== desiredWidth || height !== desiredHeight) {
                $('#errorRegisterImage').text("Image size must be 470 by 650 pixels.");
                $("#fileProgressRegister").hide();
                return;
            }

            var formData = new FormData();
            formData.append("file", file);

            $.ajax({
                url: "/Controller/Master/Upload",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {
                    console.log(data);

