@page
@model AMMasterProject.Pages.Admin.Partners.IndexModel
@{
    <title>Partners</title>

    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}

<form method="post">


<div class="row no-margin">
    <div class="col-md-2">
        <div class="nav nav-pills flex-column flex-md-row mb-3">
            <a class="nav-link" href="~/admin/partners">
                <i class="bx bx-list-ul me-1"></i>
                List
            </a>
            <a class="nav-link" href="~/admin/partners/add"><i class="bx bx-plus me-1"></i> Add </a>
         

        </div>
    </div>
    <div class="card col-md-10">

        <div class="table-responsive text-nowrap">
            <table id="ListingLoad" class="table">
                <thead class="table-secondary">
                    <tr>



                        <th>Title</th>
                        <th style="width:150px" class="text-center">URL</th>
                        <th style="width:100px" class="text-center">Status</th>
                        <th style="width:60px" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                        @foreach (var item in Model.partnerlist)
                    @*     Loop start*@
                  
                        {
                            
                       
                    <tr>


                        <td>
                            <img src="@item.Image" class="rounded-circle">
                            @item.ParnerName
                        </td>
                        <td class="text-center">
                            @item.Partnerurl
                        </td>
                    
                        <td class="text-center">
                            @item.IsPublish
                        </td>
                        <td class="center">
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">

                                    <a href="/admin/partners/add?ID=@item.PartnerId" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    @*<a class="dropdown-item"><i class="bx bx-trash"></i> Delete</a>*@

                                            <button formnovalidate asp-page-handler="Delete" asp-route-partnerid="@item.PartnerId" onclick="return confirm('Are you sure you want to delete?')" class="dropdown-item"><i class="bx bx-trash"></i> Delete</button>

                                
                                
                                </div>
                            </div>
                        </td>
                    </tr>

                    @*     Loop End*@
                        }

                </tbody>
            </table>
        </div>
    </div>
</div>

</form>