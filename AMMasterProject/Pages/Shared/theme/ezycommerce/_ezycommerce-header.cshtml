                <script>
                    // Sayfa yüklendiğinde doğru dili göster
                    document.addEventListener('DOMContentLoaded', function() {
                        console.log('🔧 Language header script started');
                        
                        // FORCE CLEAR - Eski cache'i temizle
                        // FORCE CLEAR ALL - Temiz başlangıç
                        localStorage.removeItem('translations');
                        localStorage.removeItem('translationsTimestamp');
                        localStorage.removeItem('selectedLanguage');
                        console.log('🧹 FORCED CLEAR: All language data reset');
                        
                        // Dil ayarını kontrol et
                        var savedLang = localStorage.getItem('selectedLanguage');
                        console.log('📖 Saved language from localStorage:', savedLang);
                        
                        // Eğer kaydedilen dil yoksa veya geçersizse English yap
                        if (!savedLang || !['en', 'tr', 'de', 'fr'].includes(savedLang)) {
                            savedLang = 'en';
                            localStorage.setItem('selectedLanguage', 'en');
                            console.log('✅ Set default language to English');
                        }
                        
                        var currentLangSpan = document.getElementById('currentLang');
                        var langNames = {
                            'en': 'English',
                            'tr': 'Türkçe', 
                            'de': 'Deutsch',
                            'fr': 'Français'
                        };
                        
                        if (currentLangSpan) {
                            currentLangSpan.textContent = langNames[savedLang] || 'English';
                            console.log('🏷️ Updated language display to:', langNames[savedLang]);
                        }
                        
                        // Sadece English değilse dil değiştir
                        if (typeof setLanguage === 'function' && savedLang !== 'en') {
                            console.log('🔄 Applying saved language:', savedLang);
                            setTimeout(function() {
                                setLanguage(savedLang);
                            }, 2000);
                        } else {
                            console.log('🏠 Staying with English default');
                        }
                    });
                </script>

 

