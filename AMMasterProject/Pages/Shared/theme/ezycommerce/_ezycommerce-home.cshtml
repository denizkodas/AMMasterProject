<script>
    $(function () {
        var header = $(".main-header");

        $(window).scroll(function () {
            var scroll = $(window).scrollTop();
            if (scroll >= 500) {
                header.addClass("main-header-classadd");
            } else {
                header.removeClass("main-header-classadd");
            }
        });
    });
</script>