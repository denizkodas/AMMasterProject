
<div class="social-sharing">
    <span class="social-title notranslate" data-translate="share">
        Share
    </span> <div class="social-btn">
        <button class="facebook" id="share-facebook"></button>
        <button class="twitter" id="share-twitter"> </button>
        <button class="linkedin" id="share-linkedin"> </button>

        <button class="whatsapp" id="share-whatsapp"></button>

        <button class="copylink" id="share-copylink"></button>
    </div>
</div>
<script>


    $(document).ready(function () {
        var currentURL = window.location.href;

        $("#share-facebook").click(function () {
            var facebookURL = "https://www.facebook.com/sharer/sharer.php?u=" + encodeURIComponent(currentURL);
            window.open(facebookURL, "_blank");
        });

        $("#share-twitter").click(function () {
            var twitterURL = "https://twitter.com/intent/tweet?url=" + encodeURIComponent(currentURL);
            window.open(twitterURL, "_blank");
        });

        $("#share-linkedin").click(function () {
            var linkedinURL = "https://www.linkedin.com/shareArticle?url=" + encodeURIComponent(currentURL);
            window.open(linkedinURL, "_blank");
        });

        $("#share-whatsapp").click(function () {
            var whatsappURL = "https://wa.me/?text=" + encodeURIComponent("Check out this awesome link: " + currentURL);
            window.open(whatsappURL, "_blank");
        });

        $("#share-copylink").click(function () {
            // Copy the current URL to the clipboard
            var dummy = document.createElement("textarea");
            document.body.appendChild(dummy);
            dummy.value = currentURL;
            dummy.select();
            document.execCommand("copy");
            document.body.removeChild(dummy);

            // Change the icon color to indicate it's copied
            $("#share-copylink").addClass("copied");
        });
    });
</script>