@{
    string image = User.FindFirst("Image")?.Value;
    string firstName = User.FindFirst("FirstName")?.Value.ToString();
    string firstChar = User.FindFirst("firstchar")?.Value.ToString();
}

@if (image != "")
{
    <img class="user-image" src="@image" alt="Name">
}
else
{
    <span class="profile-alpha alpha-@firstChar">@firstChar</span>
}

