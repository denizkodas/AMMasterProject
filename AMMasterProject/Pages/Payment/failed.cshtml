@page
@model AMMasterProject.Pages.Payment.failedModel
@{
    Layout = "/Pages/Shared/_layoutBlank.cshtml";
    ViewData["Title"] = "Payment Failed";
}

<style>
    body {
        background: var(--white-smoke)
    }
    .body-content{
        bottom:0px !important


    }
</style>
<div class="container">
    <div class="row box-center paddingtb">
        <div class="col-md-5">
            <div class="center white-bg radius30 shadow padding30 failed">
               
                <svg viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zM11.4 10l2.83-2.83-1.41-1.41L10 8.59 7.17 5.76 5.76 7.17 8.59 10l-2.83 2.83 1.41 1.41L10 11.41l2.83 2.83 1.41-1.41L11.41 10z" /></svg>
                <h1 class="bold">
                    <span class="notranslate" data-translate="paymentfailedheading">  Failed </span>
                   </h1>
                <p class="grey-c">
                    <span class="notranslate" data-translate="paymentfailedmsg">     Sorry, your payment was not successful. </span>


                 </p>
                <a href="@Model.ReturnUrl" class="red-bg btn radius30 f-theme">
                    <span class="notranslate" data-translate="tryagain">
                        Try Again
                    </span>

                  </a>

            </div>


        </div>
    </div>
</div>