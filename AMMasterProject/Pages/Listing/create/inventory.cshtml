@page "/listing/create/inventory/{ID}"
@model AMMasterProject.Pages.Listing.create.inventoryModel
@{
    Layout = "/Pages/Shared/_layoutAdmin.cshtml";
}
<title class="notranslate" data-translate="listingdetails">

    Listing Details
</title>
<form method="post">


<div>



    <div class="row large-form">

        <partial name="/Pages/listing/create/_tab.cshtml" model="@Model.productguid" />

        <div class="col-md-10 l-tabs-content form">
                <a class="skip-btn" href="~/listing/create/images/@Model.productguid">
                    <span class="notranslate" data-translate="skip">

                        Skip
                    </span>
                </a>
            <h5 class="l-tabs-heading">
                    <span class="notranslate" data-translate="inventory">
                        Inventory
                     
                    </span>
               
            </h5>

            <div class="white-bg paddingtb">
                <div class="row paddingrf-15 no-margin">
                    <div class=" col-md-3 s-bold">
                            <span class="notranslate" data-translate="inventorymanagement">
                                Inventory Management

                            </span>
                     
                    </div>
                    <div class="col-md-9 no-padding checkright">

                        <div class="row form-group">
                                <div class="form-group col-md-8">
                                    <span class="notranslate" data-translate="sku">
                                        SKU 

                                    </span>
                                
                                    <input type="text" asp-for="@Model.product.SKU">
                                </div>

                                <div class="form-group col-md-4">

                                    <span class="notranslate" data-translate="eancode">
                                       
                                        EAN Code
                                    </span>   <span class="notranslate" data-translate="optional">
                                     
                                        (optional )
                                    </span>

                                
                                    <input type="text" maxlength="13" asp-for="@Model.product.EANCode">


                                </div>
                        </div>

                            <div class="form-group">


                                <input type="checkbox" asp-for="@Model.product.IsOutOfStock">
                                <label id="isoutofstock" asp-for="@Model.product.IsOutOfStock" class="notranslate" data-translate="outofstock">
                                 

                                        Out of Stock 
                                  

                                    
                                   </label>



                                <p class="small grey-c paddingrf-15 marginrf-15">
                                    <span class="notranslate" data-translate="outofstockintruction">
                                        In this section you may create Out of Stock statuses to be displayed on the Description page when It's out of stock.

                                    </span>

                               </p>

                            </div>
                          
                       <div class="from-group">
                        <input type="checkbox" asp-for="@Model.product.IsManagedInventory" />
                                <label id="Ismanageinventory" asp-for="@Model.product.IsManagedInventory" class="notranslate" data-translate="manageinventory">Manage Inventory</label>


                      

                        <p class="small grey-c paddingrf-15 marginrf-15">
                                    <span class="notranslate" data-translate="manageinventorylindone">
                                        1. Mark Check if you want to enable an automatic inventory system in this product.
                                    </span>
                            
                        </p>
                        <p class="small grey-c paddingrf-15 marginrf-15">
                                    <span class="notranslate" data-translate="manageinventorylindtwo">
                            2. If enabled, and you do not have balance product in stock user cannot buy it.
                            </span>
                        </p>
                            </div>
                    </div>


                </div>


             
                
                <div class="row paddingrf-15 no-margin" id="dvIsManagedInventory">

                        <hr />

                        <div class=" col-md-3 s-bold">
                            <span class="notranslate" data-translate="quantity">
                                Quantity      </span>
                
                    </div>
                    <div class="col-md-9 no-padding">
                        <div class="row">

                            <div class="form-group col-md-8">
                                    <span class="notranslate" data-translate="mincartqty">
                                        Min Cart Qty 
                                    </span>
                              
                             
                                <input type="text" asp-for="@Model.product.MINQTY" min="0" inputmode="numeric" >
                                    <span asp-validation-for="@Model.product.MINQTY" class="required"></span>


                            </div>
                            <div class="form-group col-md-8">
                                    <span class="notranslate" data-translate="maxcartqty">
                                        Max Cart Qty
                                    </span>
                               
                                    <input type="text" asp-for="@Model.product.MAXQTY" min="0" inputmode="numeric">
                                    <span asp-validation-for="@Model.product.MAXQTY" class="required"></span>


                            </div>



                          
                     

                        </div>

                    </div>


                </div>

                    <div class="form-group col-md-8">
                        <input type="submit" value="Update">

                    </div>
                    <br/>
                    <br/>
                <hr />

                <div class="padding15 margin15" id="list" style="display:none">
                    <h4 class="d-grey-c">
                            <span class="notranslate" data-translate="maxcartqty">
                                Purchase Details 
                            </span>
                  
                    </h4>

                    <div class="table-h">
                        <table style="width: 100%;" class="table table-striped table-bordered">
                            <tbody>
                                <tr>
                                    <td>
                                            <span class="notranslate" data-translate="date">
                                                Date
                                            </span>
                                        </td>
                                    <td>
                                            <span class="notranslate" data-translate="qty">
                                                Qty
                                            </span>
                                       </td>
                                    <td>
                                            <span class="notranslate" data-translate="amount">
                                                Amount
                                            </span>
                                        </td>
                                    <td>
                                            <span class="notranslate" data-translate="vendor">
                                                Vendor
                                            </span>
                                        </td>
                                    <td>
                                            <span class="notranslate" data-translate="action">
                                                Action
                                            </span>
                                        
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input name="ctl00$ContentPlaceHolder1$txtpurchasedate" type="date" id="ContentPlaceHolder1_txtpurchasedate">
                                        <span data-val-controltovalidate="ContentPlaceHolder1_txtpurchasedate" data-val-errormessage="Required" data-val-validationgroup="inventory" id="ContentPlaceHolder1_RequiredFieldValidator3" class="required" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">Required</span>
                                    </td>
                                    <td>
                                        <input name="ctl00$ContentPlaceHolder1$txtqty" type="number" id="ContentPlaceHolder1_txtqty" min="1">
                                        <span data-val-controltovalidate="ContentPlaceHolder1_txtqty" data-val-errormessage="Required" data-val-validationgroup="inventory" id="ContentPlaceHolder1_RequiredFieldValidator1" class="required" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">Required</span>

                                    </td>
                                    <td>

                                        <input name="ctl00$ContentPlaceHolder1$txtamount" type="text" id="ContentPlaceHolder1_txtamount">
                                        <span data-val-controltovalidate="ContentPlaceHolder1_txtamount" data-val-errormessage="Required" data-val-validationgroup="inventory" id="ContentPlaceHolder1_RequiredFieldValidator2" class="required" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">Required</span>


                                    </td>
                                    <td>
                                        <input name="ctl00$ContentPlaceHolder1$txtvendor" type="text" id="ContentPlaceHolder1_txtvendor">
                                        <span data-val-controltovalidate="ContentPlaceHolder1_txtvendor" data-val-errormessage="Required" data-val-validationgroup="inventory" id="ContentPlaceHolder1_RequiredFieldValidator4" class="required" data-val="true" data-val-evaluationfunction="RequiredFieldValidatorEvaluateIsValid" data-val-initialvalue="" style="visibility:hidden;">Required</span>

                                    </td>
                                    <td>
                                        <input type="submit" name="ctl00$ContentPlaceHolder1$Button2" value="Save" onclick="javascript:WebForm_DoPostBackWithOptions(new WebForm_PostBackOptions(&quot;ctl00$ContentPlaceHolder1$Button2&quot;, &quot;&quot;, true, &quot;inventory&quot;, &quot;&quot;, false, false))" id="ContentPlaceHolder1_Button2">

                                    </td>
                                </tr>





                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-md-3 col-md-offset-9 no-padding">
                            <h4 class="d-grey-c">
                                    <span class="notranslate" data-translate="summary">
                                        Summary
                                    </span>  

                                </h4>
                            <table style="width: 250px" class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <td>

                                                <span class="notranslate" data-translate="purchasedquantity">
                                                    Purchased Quantity
                                                </span> 
                                            </td>
                                        <td>
                                            <span id="ContentPlaceHolder1_lblpurchased">37</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                                <span class="notranslate" data-translate="soldquantity">
                                                    Sold Quantity
                                                </span>
                                               </td>
                                        <td> <span id="ContentPlaceHolder1_lblsold">3</span></td>
                                    </tr>
                                    <tr>
                                        <td>
                                                <span class="notranslate" data-translate="balance">
                                                    Balance
                                                </span>
                                              </td>
                                        <td><span id="ContentPlaceHolder1_lblbalance">3</span></td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>

                        <hr />
                    </div>
          

                <div class="row paddingrf-15">
                    <div class=" col-md-6 checkright">
                    </div>
                    <div class=" col-md-6 right">


                      @*       <button type="button">
                                <span class="notranslate" data-translate="saveandcontinue">

                                    Save and Continue
                                </span>
                        </button> *@

                          @*   <a href="~/listing/create/inventory/@Model.productguid">
                                <input type="button" value="Save &amp; Continue">
                            </a> *@
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</form>


<script>
    function ShippingDetails() {
        var isChecked = $("#product_IsManagedInventory").is(":checked");

        if (isChecked) {
            $("#dvIsManagedInventory").show();
        } else {
            $("#dvIsManagedInventory").hide();
        }
    }
    $(document).ready(function () {

        $("#product_IsManagedInventory").change(function () {
            ShippingDetails();
        });

        // Function to handle page load event
        ShippingDetails();
    });
</script>